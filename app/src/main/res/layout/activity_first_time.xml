<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Teal"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.abdullahal_munzir.mycourse.FirstTimeActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_semister_background"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Semester System"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/semester_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <RadioButton
                android:id="@+id/eight_semester_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8-semesters"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/twelve_semester_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-semesters"
                android:textSize="18sp" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/notice_txt"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/cal_btn_background"
        android:elevation="2dp"
        android:foreground="@drawable/ripple_borderless"
        android:text="GO"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>